{
  "resources": {
    "memoryMB": 1024,
    "virtualCores": 1
  },
  "driverResources": {
    "memoryMB": 1024,
    "virtualCores": 1
  },
  "connections": [
    {
      "from": "CDC Database",
      "to": "CDCKudu"
    }
  ],
  "batchInterval": "10s",
  "comments": [],
  "postActions": [],
  "properties": {
    "system.spark.spark.streaming.backpressure.enabled": true,
    "system.spark.spark.executor.instances": 1
  },
  "processTimingEnabled": true,
  "stageLoggingEnabled": true,
  "numOfRecordsPreview": 100,
  "maxConcurrentRuns": 1,
  "stages": [
    {
      "name": "CDC Database",
      "plugin": {
        "name": "CDCDatabase",
        "type": "streamingsource",
        "label": "CDC Database",
        "artifact": {
          "name": "cask-cdc",
          "version": "1.0.0",
          "scope": "USER"
        },
        "properties": {
          "maxRatePerPartition": "1000",
          "referenceName": "OracleCDC",
          "broker": "--Type host:port of the Kafka broker",
          "topic": "-- Type the name of the topic where GoldenGate push messages",
          "defaultInitialOffset": "-2"
        }
      }
    },
    {
      "name": "CDCKudu",
      "plugin": {
        "name": "CDCKudu",
        "type": "sparksink",
        "label": "CDCKudu",
        "artifact": {
          "name": "cask-cdc",
          "version": "1.0.0",
          "scope": "USER"
        },
        "properties": {
          "buckets": "16",
          "seed": "1",
          "compression-algo": "Snappy",
          "encoding": "Auto",
          "opt-timeout": "30000",
          "admin-timeout": "30000",
          "replicas": "1",
          "row-flush": "1000",
          "boss-threads": "1",
          "referenceName": "CDCKudu",
          "master": "-- Type here the Kudu master address"
        }
      }
    }
  ],
  "clientResources": {
    "memoryMB": 1024,
    "virtualCores": 1
  },
  "disableCheckpoints": false,
  "stopGracefully": true,
  "description": "Change Data Capture pipeline which reads the change data from Oracle database and transfer it to Kudu sink."
}
