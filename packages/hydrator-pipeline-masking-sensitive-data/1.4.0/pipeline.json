{
  "resources": {
    "memoryMB": 512,
    "virtualCores": 1
  },
  "driverResources": {
    "memoryMB": 512,
    "virtualCores": 1
  },
  "connections": [
    {
      "from": "TransactionsFile",
      "to": "Parse Fields"
    },
    {
      "from": "Parse Fields",
      "to": "Validate Credit Card"
    },
    {
      "from": "Validate Credit Card",
      "to": "Mask Credit Card"
    },
    {
      "from": "Validate Credit Card",
      "to": "Collect Errors"
    },
    {
      "from": "Mask Credit Card",
      "to": "Credit Store"
    },
    {
      "from": "Collect Errors",
      "to": "Errors Store"
    }
  ],
  "comments": [],
  "postActions": [],
  "stages": [
    {
      "name": "TransactionsFile",
      "plugin": {
        "name": "File",
        "type": "batchsource",
        "label": "TransactionsFile",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "referenceName": "transactions",
          "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"offset\",\"type\":\"long\"},{\"name\":\"body\",\"type\":\"string\"}]}",
          "path": "${input.transactions.data}"
        }
      }
    },
    {
      "name": "Parse Fields",
      "plugin": {
        "name": "CSVParser",
        "type": "transform",
        "label": "Parse Fields",
        "artifact": {
          "name": "transform-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "format": "DEFAULT",
          "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"id\",\"type\":\"string\"},{\"name\":\"first_name\",\"type\":\"string\"},{\"name\":\"last_name\",\"type\":\"string\"},{\"name\":\"email\",\"type\":\"string\"},{\"name\":\"gender\",\"type\":\"string\"},{\"name\":\"credit_card_type\",\"type\":\"string\"},{\"name\":\"credit_card_num\",\"type\":\"string\"},{\"name\":\"zip\",\"type\":\"string\"},{\"name\":\"expiration\",\"type\":\"string\"}]}",
          "field": "body"
        }
      }
    },
    {
      "name": "Validate Credit Card",
      "plugin": {
        "name": "Wrangler",
        "type": "transform",
        "label": "Validate Credit Card",
        "artifact": {
          "name": "wrangler-transform",
          "version": "[2.0.0-SNAPSHOT, 5.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"id\",\"type\":\"string\"},{\"name\":\"first_name\",\"type\":\"string\"},{\"name\":\"last_name\",\"type\":\"string\"},{\"name\":\"email\",\"type\":\"string\"},{\"name\":\"gender\",\"type\":\"string\"},{\"name\":\"credit_card_type\",\"type\":\"string\"},{\"name\":\"credit_card_num\",\"type\":\"string\"},{\"name\":\"zip\",\"type\":\"string\"},{\"name\":\"expiration\",\"type\":\"string\"}]}",
          "directives": "send-to-error !dq:isCreditCard(credit_card_num)"
        }
      }
    },
    {
      "name": "Mask Credit Card",
      "plugin": {
        "name": "JavaScript",
        "type": "transform",
        "label": "Mask Credit Card",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "script": "function transform(input, emitter, context) {\n  var masked = new Array(input.credit_card_num.length-3).join('*') + input.credit_card_num.substr(-4);\n  input.credit_card_num = masked;\n  emitter.emit(input);\n}",
          "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"id\",\"type\":\"string\"},{\"name\":\"first_name\",\"type\":\"string\"},{\"name\":\"last_name\",\"type\":\"string\"},{\"name\":\"email\",\"type\":\"string\"},{\"name\":\"gender\",\"type\":\"string\"},{\"name\":\"credit_card_type\",\"type\":\"string\"},{\"name\":\"zip\",\"type\":\"string\"},{\"name\":\"expiration\",\"type\":\"string\"},{\"name\":\"credit_card_num\",\"type\":\"string\"}]}"
        }
      }
    },
    {
      "name": "Collect Errors",
      "plugin": {
        "name": "ErrorCollector",
        "type": "errortransform",
        "label": "Collect Errors",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "messageField": "msg",
          "codeField": "code",
          "stageField": "node"
        }
      }
    },
    {
      "name": "Credit Store",
      "plugin": {
        "name": "GCS",
        "type": "batchsink",
        "label": "Credit Store",
        "artifact": {
          "name": "google-cloud",
          "version": "0.12.0",
          "scope": "SYSTEM"
        },
        "properties": {"schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"id\",\"type\":\"string\"},{\"name\":\"first_name\",\"type\":\"string\"},{\"name\":\"last_name\",\"type\":\"string\"},{\"name\":\"email\",\"type\":\"string\"},{\"name\":\"gender\",\"type\":\"string\"},{\"name\":\"credit_card_type\",\"type\":\"string\"},{\"name\":\"credit_card_num\",\"type\":\"string\"},{\"name\":\"zip\",\"type\":\"string\"},{\"name\":\"expiration\",\"type\":\"string\"}]}"}
      }
    },
    {
      "name": "Errors Store",
      "plugin": {
        "name": "GCS",
        "type": "batchsink",
        "label": "Errors Store",
        "artifact": {
          "name": "google-cloud",
          "version": "0.12.0",
          "scope": "SYSTEM"
        },
        "properties": {"schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"id\",\"type\":\"string\"},{\"name\":\"first_name\",\"type\":\"string\"},{\"name\":\"last_name\",\"type\":\"string\"},{\"name\":\"email\",\"type\":\"string\"},{\"name\":\"gender\",\"type\":\"string\"},{\"name\":\"credit_card_type\",\"type\":\"string\"},{\"name\":\"credit_card_num\",\"type\":\"string\"},{\"name\":\"zip\",\"type\":\"string\"},{\"name\":\"expiration\",\"type\":\"string\"},{\"name\":\"msg\",\"type\":\"string\"},{\"name\":\"code\",\"type\":\"int\"},{\"name\":\"node\",\"type\":\"string\"}]}"}
      }
    }
  ],
  "schedule": "0 * * * *",
  "engine": "mapreduce",
  "description": "Pipeline that imports the credit card data from Database, filters the records which doesn't have valid credit card, masks the credit card numbers and stores the result in Table"
}
