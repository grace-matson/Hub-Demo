{
  "resources": {
    "memoryMB": 1024,
    "virtualCores": 1
  },
  "driverResources": {
    "memoryMB": 1024,
    "virtualCores": 1
  },
  "connections": [
    {
      "from": "HDFSSource",
      "to": "Wrangler"
    },
    {
      "from": "Wrangler",
      "to": "Merge"
    },
    {
      "from": "Merge",
      "to": "MaxUpdateTime"
    },
    {
      "from": "MaxUpdateTime",
      "to": "DateTransform"
    },
    {
      "from": "DateTransform",
      "to": "GenerateState"
    },
    {
      "from": "GenerateState",
      "to": "StateStore"
    },
    {
      "from": "StateRestore",
      "to": "DBSource"
    },
    {
      "from": "Merge",
      "to": "FormatDate"
    },
    {
      "from": "FormatDate",
      "to": "HDFSMergedSink"
    },
    {
      "from": "DBSource",
      "to": "Merge"
    }
  ],
  "batchInterval": "1s",
  "comments": [],
  "postActions": [],
  "stages": [
    {
      "name": "HDFSSource",
      "plugin": {
        "name": "TPFSAvro",
        "type": "batchsource",
        "label": "HDFSSource",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "name": "mergedHDFS",
          "duration": "${hdfs.source.duration}"
        }
      }
    },
    {
      "name": "Wrangler",
      "plugin": {
        "name": "Wrangler",
        "type": "transform",
        "label": "Wrangler",
        "artifact": {
          "name": "wrangler-transform",
          "version": "[2.0.0, 4.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "field": "*",
          "precondition": "false",
          "threshold": "5",
          "directives": "parse-as-simple-date UPDATETIME yyyy-MM-dd HH:mm:ss\nset-column TIMESTAMP date:UNIXTIMESTAMP_MILLIS(UPDATETIME)\ndrop UPDATETIME\nrename TIMESTAMP UPDATETIME"
        }
      }
    },
    {
      "name": "Merge",
      "plugin": {
        "name": "Deduplicate",
        "type": "batchaggregator",
        "label": "Merge",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "uniqueFields": "--Type your unique field",
          "filterOperation": "--Type your timestamp field:Max"
        }
      }
    },
    {
      "name": "MaxUpdateTime",
      "plugin": {
        "name": "TopN",
        "type": "batchaggregator",
        "label": "MaxUpdateTime",
        "artifact": {
          "name": "topn",
          "version": "[1.0.0, 1.2.0)",
          "scope": "USER"
        },
        "properties": {
          "ignoreNull": "false",
          "topSize": "1",
          "topField": "--Type your timestamp field"
        }
      }
    },
    {
      "name": "DateTransform",
      "plugin": {
        "name": "DateTransform",
        "type": "transform",
        "label": "DateTransform",
        "artifact": {
          "name": "date-transform",
          "version": "[1.1.0, 1.2.0)",
          "scope": "USER"
        },
        "properties": {
          "secondsOrMilliseconds": "Milliseconds",
          "sourceField": "--Type source field to format",
          "targetField": "offset",
          "targetFormat": "YYYY-MM-dd HH:mm:ss"
        }
      }
    },
    {
      "name": "GenerateState",
      "plugin": {
        "name": "JavaScript",
        "type": "transform",
        "label": "GenerateState",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "script": "function transform(input, emitter, context) {\n  var output = {};\n  output.key = 'state';\n  output.value = input.offset;\n  emitter.emit(output);\n}",
          "schema": "{\"type\":\"record\",\"name\":\"etlSchemaBody\",\"fields\":[{\"name\":\"key\",\"type\":\"string\"},{\"name\":\"value\",\"type\":\"string\"}]}"
        }
      }
    },
    {
      "name": "StateStore",
      "plugin": {
        "name": "KVTable",
        "type": "batchsink",
        "label": "StateStore",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "name": "trackingTable",
          "key.field": "key",
          "value.field": "value"
        }
      }
    },
    {
      "name": "StateRestore",
      "plugin": {
        "name": "StateRestore",
        "type": "action",
        "label": "StateRestore",
        "artifact": {
          "name": "state-restore-action",
          "version": "[1.0.0, 1.2.0)",
          "scope": "USER"
        },
        "properties": {
          "trackingTable": "trackingTable",
          "key": "state",
          "defaultValue": "1970-01-01 00:00:00"
        }
      }
    },
    {
      "name": "DBSource",
      "plugin": {
        "name": "Database",
        "type": "batchsource",
        "label": "DBSource",
        "artifact": {
          "name": "database-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "enableAutoCommit": "false",
          "columnNameCase": "No change",
          "referenceName": "Oracle",
          "user": "${oracle.user}",
          "password": "${oracle.password}",
          "jdbcPluginName": "oracle7",
          "jdbcPluginType": "jdbc",
          "connectionString": "jdbc:oracle:thin:@${oracle.hostname}:${oracle.database}",
          "importQuery": "-- Type your SQL here. Example: SELECT * FROM customers WHERE modified_time > to_timestamp( '${state}', 'YYYY-MM-DD hh24:mi:ss')",
          "numSplits": "1"
        }
      }
    },
    {
      "name": "FormatDate",
      "plugin": {
        "name": "DateTransform",
        "type": "transform",
        "label": "FormatDate",
        "artifact": {
          "name": "date-transform",
          "version": "[1.1.0, 1.2.0)",
          "scope": "USER"
        },
        "properties": {
          "secondsOrMilliseconds": "Milliseconds",
          "sourceField": "--Type your montonically increasing timestamp field" ,
          "targetFormat": "YYYY-MM-dd HH:mm:ss",
          "targetField": "--Type the target field for formatted timestamp"
        }
      }
    },
    {
      "name": "HDFSMergedSink",
      "plugin": {
        "name": "TPFSAvro",
        "type": "batchsink",
        "label": "HDFSMergedSink",
        "artifact": {
          "name": "core-plugins",
          "version": "[1.7.0-SNAPSHOT, 3.0.0-SNAPSHOT)",
          "scope": "SYSTEM"
        },
        "properties": {
          "compressionCodec": "None",
          "name": "hdfsMerged",
          "cleanPartitionsOlderThan": "--Type duration to clean up older paritions. Ex: 1h for 1 hour"
        }
      }
    }
  ],
  "schedule": "0 * * * *",
  "engine": "mapreduce",
  "description": "Pipeline that incrementally ingests data from Database and merges the existing full snapshot of data and writes to a fileset"
}
